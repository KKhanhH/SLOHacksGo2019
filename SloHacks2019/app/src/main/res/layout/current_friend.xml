<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#396dbf"
    android:orientation="vertical">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:foreground="@drawable/ic_person_blue_24dp" />

    <TextView
        android:id="@+id/friendName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/interestingFact"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/timesMet"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="TextView"
        android:textSize="36sp" />

    <Button
        android:id="@+id/currentFriend"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f4de15"
        android:onClick="toMain"
        android:text="@string/ToHome" />

</LinearLayout>